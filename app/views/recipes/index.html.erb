

<p id="notice"><%= notice %></p>


<h1>Recipes</h1>

<% if user_signed_in? %>
  <%= link_to "Add Recipe", new_recipe_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, recipe %></td>
        <td><%= link_to image_tag(recipe.image),recipe %> </td>
         
         
        </td>
    <% end %>
  </tbody>
</table>

<br>

